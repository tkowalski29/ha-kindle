# Home Assistant Configuration
HA_URL=http://your-homeassistant-ip:8123
HA_WS_URL=ws://your-homeassistant-ip:8123/api/websocket
HA_TOKEN=your_long_lived_access_token_here

# Flask Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=10010
FLASK_DEBUG=True

# UI Configuration
# Auto-refresh interval in seconds (0 to disable)
AUTO_REFRESH_INTERVAL=30
# Theme: light or dark
THEME=light
# Grid columns for dashboard layout (default: auto - detected from HA, or specify number like 2, 3, 4)
GRID_COLUMNS=2
# Show back button in header (true/false)
SHOW_BACK_BUTTON=false
# Show last update time in header (true/false)
SHOW_LAST_UPDATE=false
